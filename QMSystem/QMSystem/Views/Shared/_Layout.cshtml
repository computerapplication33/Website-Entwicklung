<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QMSystem Mürwiker Werkstätten GmbH</title>

    <environment include="Development">
        @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />*@
        <link rel="stylesheet" href="~/css/Style.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>         
    <main>
        <section class="section_top">
            <nav>
                <div style="width:auto;height:80px">
                    <ul style="height:80px;">
                        <li><a href="@Url.Action("Index", "Home")" @(ViewContext.RouteData.Values["action"].ToString().Equals("Index") ? "class=nav_selected" :  "")>Home</a></li>
                        <li><a href="@Url.Action("Neuigkeiten", "Home")" @(ViewContext.RouteData.Values["action"].ToString().Equals("Neuigkeiten") ? "class=nav_selected" :  "")>Neuigkeiten</a></li>
                        <li><a href="@Url.Action("Veraenderungen", "Home")" @(ViewContext.RouteData.Values["action"].ToString().Equals("Veraenderungen") ? "class=nav_selected" :  "")>Veränderungen</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Aufgaben">Aufgaben</a></li>
                        <li><a href="@Url.Action("ChangeRequests", "Home")" @(ViewContext.RouteData.Values["action"].ToString().Equals("ChangeRequests") ? "class=nav_selected" :  "")>Änderungsantrag</a></li>
                        <li><a href="@Url.Action("About", "Home")" @(ViewContext.RouteData.Values["action"].ToString().Equals("About") ? "class=nav_selected" :  "")>About</a></li>
                        <li><a href="@Url.Action("Contact", "Home")" @(ViewContext.RouteData.Values["action"].ToString().Equals("Contact") ? "class=nav_selected" :  "")>Contact</a></li>
                        <li style="float:right"><img id="Logo" src="~/images/muerwiker.jpg"/></li>
                    </ul>
                </div>
            </nav>
        </section>

        <section class="section_body">
            @RenderBody()
        </section>
    </main>
    <footer style="text-align:center">
        <hr />
        <p style="float:right;margin-right:4px;text-align:center">&copy; 2018 - Mürwiker Werkstätten GmbH</p>

    @*</footer>
